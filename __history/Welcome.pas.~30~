procedure TForm4.Button1Click(Sender: TObject);
begin
  if not Assigned(FirstForm) then
    FirstForm := TFirstForm.Create(Self);
  try
  FirstForm.Show;
  finally
    FirstFOrm.Free;
  end;
end;

